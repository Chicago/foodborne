source 'https://rubygems.org'

# Rails
gem 'rails', '3.2.11'

# ActiveAdmin
gem 'activeadmin'
gem "meta_search", '>= 1.1.0.pre'

# jQuery
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Haml
gem 'haml-rails'

# Simple Form
gem 'simple_form'

# Twitter
gem 'twitter'

# Geocoder
gem 'geocoder'

# Httparty
gem 'httparty'

group :development, :test do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
  gem 'thin'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  # gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end